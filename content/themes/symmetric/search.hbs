{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main id="home" class="main" role="main">

	<!-- start: .center -->



		<!-- start: .left-content -->
		<div class="left-content section articles pull-left col-md-8 " style="margin-top:0;">
      <h1>{{count}} Results for: {{query}} </h1>

			{{#foreach posts }}

					<article class="default col-md-12 {{post_class}} {{#if @first}} first-post{{/if}}">
						<header>
								  <div class="{{^if @first}}col-md-6 col-lg-6{{/if}} {{#if @first}} col-md-12 {{/if}}">

										{{#if image}}
											<a datetime="{{date format="YYYY-MM-DD"}}" href="http://expandedconsciousness.com/{{date format="YYYY/MM/DD"}}/{{slug}}" class="thumb hover-effect">
												<img src="{{image}}" style="">
											</a>
										{{else}}
											{{content words="0"}}
										{{/if}}

									</div>
									<!--	<div class="clear"></div>-->
									<div class="{{^if @first}}col-md-6 col-lg-6{{/if}} col-md-12 col-xs-12">

										<div id="meta">

										<div class="meta">
											<div id="time">

												<time class="defaultArticleTime"datetime="{{date format="YYYY-MM-DD"}}"><i class="defaultFa fa fa-clock-o"></i>{{date}}</time>
											</div>
											<a href="{{url}}#comments" class="comments alignright"><i class="fa fa-comment"></i> <span class="disqus-comment-count" data-disqus-url="{{@blog.url}}{{url}}">0</span></a>
											<div class="clear"></div>
										</div>
									</div>
								<div class="row">
								 <div class="">
									<h4 class="title tag-title"><a datetime="{{date format="YYYY-MM-DD"}}" href="http://expandedconsciousness.com/{{date format="YYYY/MM/DD"}}/{{slug}}">{{{title}}}</a></h4>
								</div>
							</div>
						</header>
									<div class="">

									<div class="post-excerpt">
										{{excerpt words="20"}}
										<a datetime="{{date format="YYYY-MM-DD"}}" href="http://expandedconsciousness.com/{{date format="YYYY/MM/DD"}}/{{slug}}" class="continue_reading" style="opactiy: .5;">Continue Reading</a>
										<i class="fa fa-angle-double-right"></i>

									</div>
								</div>
			</article>

			{{/foreach}}

		<!-- end: .left-content -->




	</div>
	<!-- end: .center -->


</main>
